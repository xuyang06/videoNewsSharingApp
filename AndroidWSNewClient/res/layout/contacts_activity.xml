<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical" >   <ListView android:layout_width="match_parent"          android:layout_height="wrap_content"          android:id="@+id/contacts_list"          /> <LinearLayout        style="@android:style/ButtonBar"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal" >        <Button            android:id="@+id/contacts_btn"            android:layout_width="0dip"            android:layout_height="wrap_content"            android:layout_weight="1"            android:enabled="false"            android:text="@string/broadcast" />        <Button            android:id="@+id/contacts_cancel_btn"            android:layout_width="0dip"            android:layout_height="wrap_content"            android:layout_weight="1"            android:text="Cancel" />    </LinearLayout>     </LinearLayout>